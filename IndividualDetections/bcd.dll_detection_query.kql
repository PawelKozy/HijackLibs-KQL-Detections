DeviceImageLoadEvents
| extend FileName = tolower(FileName), FolderPath = tolower(FolderPath), InitiatingProcessFileName = tolower(InitiatingProcessFileName)
| where Filename == "bcd.dll"
| where not(FolderPath contains "c:\\windows\\system32" or FolderPath contains "c:\\windows\\syswow64") and (InitiatingProcessFileName endswith "bootim.exe" or InitiatingProcessFileName endswith "cidiag.exe" or InitiatingProcessFileName endswith "genvalobj.exe" or InitiatingProcessFileName endswith "mdsched.exe" or InitiatingProcessFileName endswith "msconfig.exe" or InitiatingProcessFileName endswith "recdisc.exe" or InitiatingProcessFileName endswith "recoverydrive.exe" or InitiatingProcessFileName endswith "resetengine.exe" or InitiatingProcessFileName endswith "rstrui.exe" or InitiatingProcessFileName endswith "sdclt.exe" or InitiatingProcessFileName endswith "srtasks.exe" or InitiatingProcessFileName endswith "systempropertiesadvanced.exe" or InitiatingProcessFileName endswith "systempropertiescomputername.exe" or InitiatingProcessFileName endswith "systempropertiesdataexecutionprevention.exe" or InitiatingProcessFileName endswith "systempropertieshardware.exe" or InitiatingProcessFileName endswith "systempropertiesprotection.exe" or InitiatingProcessFileName endswith "systempropertiesremote.exe" or InitiatingProcessFileName endswith "systemreset.exe" or InitiatingProcessFileName endswith "vds.exe" or InitiatingProcessFileName endswith "vdsldr.exe" or InitiatingProcessFileName endswith "vssvc.exe" or InitiatingProcessFileName endswith "wbengine.exe")
| invoke FileProfile("SHA1", 1000)
